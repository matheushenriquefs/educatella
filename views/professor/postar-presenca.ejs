<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>

  <!-- Header da Página -->
  <%- include('../partials/header') %>


  <main>

    <!-- Section engolba nav-left + form presença e tabela de aluno -->
    <section class="first-section">

      <div class="container-fluid">
          <div class="row">

          <!-- Nav left -->
          <%- include('../partials/professor-left') %>

          <!--Formulário-->
          <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded formulário-presenca">

            <!--Scroll-->
            <div>

              <!--Título-->
              <h3 class="form-presenca-titulo">Controle de Presença</h3>
              <form action="/professor/presenca" method="get"></form>
              <!-- DIV Calendário -->
              <div class="form-row justify-content-center">
                <div class="form-group col-md-8" id="presenca-label">
                  <label for="presenca">Data da chamada:</label>
                  <input type="date" id="presenca" name="presenca">
                </div>
              </div>

              <!-- Tabela - Lista de chamada -->
              <div class="form-row justify-content-center presenca">
                <div class="form-group col-md-8 presenca">
                  <table class="table presenca">

                    <!--Linha fixa-->   
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Aluno</th>
                        <th scope="col">Sim</th>
                        <th scope="col">Não</th>
                      </tr>
                    </thead>

                    <!--body-->
                    <tbody>

                      <!--linha 1-->
                      <tr>
                        <th scope="row">1</th>
                        <td>Duda Beat</td>
                        <td>
                          <input type="radio" class="form-check-input" name="presenca" id="exampleCheck1">
                          <label class="form-check-label" for="exampleCheck1">Sim</label>
                        </td>
                        <td>
                          <input type="radio" class="form-check-input" name="presenca" id="exampleCheck1">
                          <label class="form-check-label" for="exampleCheck1">Não</label>
                        </td>
                      </tr>
                      


                    </tbody>
                  </table>
                </div>
              </div>

              <!-- DIV engloba Senha e botão enviar -->
              <div class="form-row input-senha">
                <div class="form-group col-md-4">
                  <label for="inputPasswordPresenca"></label>
                  <input type="password" class="form-control" id="inputPasswordPresenca" placeholder="Digite sua senha">
                </div>
                <button type="submit" class="btn-enviar-presenca">Enviar</button>
              </div>

            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Importando Jquery -->
  <script type="text/javascript" src="/vendor/jquery.min.js"></script>
  <!-- Importando Bootstrap JS -->
  <script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>

</body>

</html>