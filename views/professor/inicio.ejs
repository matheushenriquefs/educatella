<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Icone da página -->
    <link rel="sortcut icon" href="/images/icone.png" type="image/x-icon" />
    <title> Educatella </title>
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/salasAlunos.css" rel="stylesheet">
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>
    <!-- Header da Página -->
    <%- include('../partials/header-professor') %>


    <main>


        <!--Engloba: botao pesquisar classe + grid de classes-->
        <section class="first-section">


            <div class="container box-1">
                <div class="row mb-5">
                    <!-- Recepção do professor -->
                    <div class="offset-1 col-11">
                        <h2 class="titulo"> Olá, Professor <%= usuario.name %>! Estas são suas classes </h2>
                    </div>
                </div>
                <div class="row mb-5">
                    <!-- Botão para pesquisar classes -->
                    <div class="offset-1">
                        <a href="/professor/:id/postar-tarefa" class="botao"> Pesquisar Classe </a>
                    </div>
                </div>
            </div>
 
            <!-- Coluna de professores --> 
            <div class="container box-2">
                <div class="row p-3 mb-5 mt-9">

                    <!-- Foto e descrição do professor e botão para acessar a Classe -->

                    <% professor.classes.forEach(classe => { %>

                        <div class="mb-5 offset-1 col-3 text-center">
                            <img class="imagem-padrao" src="<%= usuario.imagem %>">
                            <p class="texto"> <%= classe.nome %> </p>
                            <p class="texto"> <%= classe.codigo %> </p>
                            <form action="/professor/tarefa" method="POST">
                                <input type="hidden" class="form-control" value="<%= classe.id %>" name="id_classe">
                                <button type="submit" class="btn text-white botao"> Acessar Classe </button>
                            </form>
                        </div>

                    <% }) %>


                </div>
            </div>
        </section>


        <!-- Section engolba form para criar classe -->
        <section class="second-section">

            <div class="container-fluid">
                <div class="row">

                    <!--Formulário-->
                    <div class="offset-1 col-10 sombra p-5 mb-5 formulário-criar-classe">

                        <!--Título--> 
                        <h3 class="mb-5 form-criar-classe">Criar Classe</h3>


                        <form action="/professor/inicio" method="POST" id="form-criar-classe">

                            <!-- ID prof -->
                            <div class="form-row justify-content-center"> 
                                <div class="col-10">
                                    <input type="hidden" name="id_professor" value="<%= professor.id %>" class="form-control">
                                </div>
                        </div>
                        <br>

                            <!-- Matéria-->
                            <div class="form-row justify-content-center">
                                <div class="col-10">
                                    <input type="text" name="nome" class="form-control" placeholder="Digite a matéria">
                                </div>
                            </div>
                            <br>

                            <!--Código-->
                            <div class="form-row justify-content-center">
                                <div class="col-10">
                                    <input type="text" name="codigo" class="form-control" placeholder="Digite o código">
                                </div>
                            </div>
                            <br>

                            <button type="submit" class="btn-criar-classe">Enviar</button>

                        </form>

                    </div>

                </div>
            </div>

        </section>


        <!-- Section: tabela de edição de classe -->
        <section class="third-section">

            <div class="container-fluid">
                <div class="row">

                    <!--Tabela-->
                    <div class="offset-1 col-10 sombra p-5 mb-5 bg-white rounded formulário-tarefa">

                        <!--Título-->
                        <h3 class="mb-5 form-editar-classe justify-content-center">Editar classe</h3>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Matéria</th>
                                    <th scope="col">Código</th>
                                    <th scope="col">Editar</th>
                                    <th scope="col">Excluir</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% professor.classes.forEach(alterar => { %>

                                <tr>
                                    <td>
                                        <%= alterar.nome %>
                                    </td>
                                    <td>
                                        <%= alterar.codigo %>
                                    </td>
                                    <td class="actions">
                                        <a href="#" class="settings" title="Settings" data-toggle="modal"
                                            data-target="#siteModal<%= alterar.id %>">
                                            <i class="material-icons">&#xE8B8;</i>
                                        </a>
                                    </td>
                                    <td class="actions">
                                        <form action="/professor/delete-classe/<%= alterar.id %>" method="POST">
                                            <button type="submit" class="button-delete"
                                                onclick="return confirm('Deseja mesmo excluir a classe?')"
                                                style="color: red;">
                                                <i class="material-icons">&#xE5C9;</i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                                <% });%>

                            </tbody>


                        </table>

                    </div>

                </div>
            </div>

        </section>

    </main>

    <% professor.classes.forEach(alterar => { %>
    <!-- Modal editar classe  -->
    <div id="siteModal<%= alterar.id %>" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">

                    <!--Header - titulo-->
                    <div class="modal-header">
                        <h4 class="modal-title">Editar informações</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <bold>&times;</bold>
                        </button>
                    </div>

                <!--Form modal-->
                <form action="/professor/editar-classe" method="POST">

                    <!--Body -->
                    <div class="modal-body">
                        <!--ID-->
                        <div class="form-group">
                            <input type="hidden" name="id_classe" value="<%= alterar.id %>" class="form-control">
                        </div>
                        <!--nome-->
                        <div class="form-group">
                            <input type="text" class="form-control" value="<%= alterar.nome %>" name="nome" placeholder="Matéria" required>
                        </div>
                        <!--codigo-->
                        <div class="form-group">
                            <input type="text" class="form-control" value="<%= alterar.codigo %>" name="codigo" placeholder="Código" required>
                        </div>
                    </div>
                    <!--Footer - buttons alterar-->
                    <div class="modal-footer">
                        <button type="submit" class="btn-modal-enviar"> Enviar </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <% });%>


       <!-- Importando Jquery -->
       <script type="text/javascript" src="/vendor/jquery.min.js"></script>
       <!-- Importando Bootstrap JS -->
       <script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
       <script type="text/javascript" src="/javascripts/src/main.js"></script>
</body>