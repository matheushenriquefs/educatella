<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>
    <!-- Header da Página -->
    <%- include('../partials/header') %>

    <main>
        <!-- Section engolba nav-left + mural de recados-->
        <section class="first-section">
            <div class="container-fluid">
                <div class="row">
                    <!-- Nav left -->
                    <%- include('../partials/professor-left') %>   

                    <!--Mural de recados-->
                  
                    <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded mural-recados">

                            <!--Título-->
                            <h3><strong>Mural de recados</strong></h3>
                          
                             
                               
                            <!--Conteúdo-->
                            <p class="covid-alert"><img src="/images/covid-icon.png" alt="icone covid19" 
                                class="covid-icon">  Informaçoes COVID-19: isolamento social até 05 de maio de 2020
                            </p>

                            <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                    <% for (let nrPagina=1 ; nrPagina <= totalPagina ; nrPagina ++) { %>
                                
                                <li class="page-item"><a class="page-link" href="?page=<%=nrPagina%>"><%=nrPagina%></a></li>
                                 
                                 <%}%>
                                 
                                   
                                </ul>
                              </nav>
                            <ul >
                                <% for (recadosDB of recadosDB) {%>
                                
                               
                                    <form method="POST" action="/professor/editar-recado/<%=recadosDB.id_recados%>" class="card p-3">
                                        <div class="page-item" >
                                            <h6><img src="/images/recados.png" alt="icone recados" class="imagens-classe"> <%= recadosDB.titulo %> </h6>
                                            <p><%= recadosDB.descricao %></p>
                                         <div class="form-row">
                                        <div class="form-group col-10 "  >
                                            <input type="text" id="titulo" name="titulo"  rows="1" cols="50" ></input>
                                            <textarea  type="text" id="descricao" name="descricao" rows="5" cols="50" >  </textarea>
                                            <button class="btn btn-outline-success" type="submit" rows="2" cols="50"  >Editar</button> 
                                
                                        </div>
                                     </div>
                            
                                 </div>                    
 
                       

                    </form>
     
                                
                               <%}%>
                                
                            </ul>
        
                           
                    </div>
                   
                </div>
            </div>

        </section>
    </main>

    <!-- Importando Jquery -->
    <script type="text/javascript" src="/vendor/jquery.min.js"></script>
    <!-- Importando Bootstrap JS -->
    <script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>

</body>
</html>