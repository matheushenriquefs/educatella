<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>

<!-- Header da Página -->
<%- include('../partials/header-professor') %>


<main>
  <!--Section engloba gerenciador de alunos cadastrados-->
  <section class="second-section">

    <div class="container-fluid cadastrar-aluno">
      <div class="row tabela-gerenciar-aluno">

        <!-- Nav left -->
        <%- include('../partials/professor-left') %>

        <!--Div Tabela-->
        <div class="offset-1 col-8 sombra p-1 mb-6 bg-white rounded formulário-gerenciar-aluno">

          <!--Scroll-->
         
          <nav aria-label="Page navigation example">
            <ul class="pagination">
                <% for (let nrPagina=1 ; nrPagina <= totalPagina ; nrPagina ++) { %>
            
            <li class="page-item"><a class="page-link" href="?page=<%=nrPagina%>"><%=nrPagina%></a></li>
             
             <%}%>
             
               
            </ul>
          </nav>

          <div class="container-fluid">
            <div class="row p-3 mb-5">
              <% for (recadosDB.aluno of recadosDB.aluno ) {%>
              <form action="/professor/gerenciar-aluno/<%=recadosDB.aluno.id%>" method="post">
                <div class="mb-5 offset-1 col-5 text-center">
                    <img class="imagem-professor" src="/images/<%=recadosDB.aluno.usuarioAluno.imagem%>">
                    <p class="texto"><%=recadosDB.aluno.usuarioAluno.nome%></p>
                    <p class="texto"> <%=recadosDB.nome%> </p>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
              </form>
              <%}%>
              </div>
            </div>

        </div>
      </div>

  </section>

</main>

<!-- Modal editar sala de aula  -->
<div id="editModalAluno" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <!--Form modal-->
      <form method="GET" action="">

        <!--Header - titulo-->
        <div class="modal-header aluno">
          <h4 class="modal-title">Editar informações</h4>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>

        <!--Body-->
        <div class="modal-body aluno">

          <!--Nome-->
          <div class="form-group">
            <label for="modal-alunos"></label>
            <input type="text" class="form-control" id="modal-alunos" placeholder="Nome" required name="modal-alunos">
          </div>

          <!--Código e faltas-->
          <div class="form-group">
            <div class="row">
              <!--Código-->
              <div class="form-group col-md-6">
                <label for="modal-periodo"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Código" required name="modal-periodo">
              </div>
              <!--Faltas-->
              <div class="form-group col-md-6">
                <label for="modal-falta"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Faltas" required name="modal-falta">
              </div>
            </div>
          </div>

          <!--Notas-->
          <div class="form-group">
            <div class="row">
              <!--Nota 1-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 1" required name="modal-nota1">
              </div>
              <!--Nota 2-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 2" required name="modal-nota2">
              </div>
              <!--Nota 3-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 3" required name="modal-nota3">
              </div>
              <!--Nota 4-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 4" required name="modal-nota4">
              </div>
            </div>
          </div>
        </div>

        <!--Footer-->
        <div class="modal-footer aluno">
          <input type="button" class="btn-modal-cancelar" data-dismiss="modal" value="Desistir" name="modal-cancelar">
          <input type="submit" class="btn-modal-enviar" value="Alterar" name="modal-enviar">
        </div>
        
      </form>
    </div>
  </div>
</div>


<!-- Importando Jquery -->
<script type="text/javascript" src="/vendor/jquery.min.js"></script>
<!-- Importando Bootstrap JS -->
<script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="/javascripts/src/actions/logout.js"></script>
</body>

</html>