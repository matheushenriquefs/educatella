<!-- Modal editar sala de aula  -->
<div id="editModalAluno" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <!--Form modal-->
      <form method="GET" action="">

        <!--Header - titulo-->
        <div class="modal-header aluno">
          <h4 class="modal-title">Editar informações</h4>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>

        <!--Body-->
        <div class="modal-body aluno">

          <!--Nome-->
          <div class="form-group">
            <label for="modal-alunos"></label>
            <input type="text" class="form-control" id="modal-alunos" placeholder="Nome" required name="modal-alunos">
          </div>

          <!--Código e faltas-->
          <div class="form-group">
            <div class="row">
              <!--Código-->
              <div class="form-group col-md-6">
                <label for="modal-periodo"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Código" required name="modal-periodo">
              </div>
              <!--Faltas-->
              <div class="form-group col-md-6">
                <label for="modal-falta"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Faltas" required name="modal-falta">
              </div>
            </div>
          </div>

          <!--Notas-->
          <div class="form-group">
            <div class="row">
              <!--Nota 1-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 1" required name="modal-nota1">
              </div>
              <!--Nota 2-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 2" required name="modal-nota2">
              </div>
              <!--Nota 3-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 3" required name="modal-nota3">
              </div>
              <!--Nota 4-->
              <div class="form-group col-md-3">
                <label for="modal-nota"></label>
                <input type="text" class="form-control" id="modal-periodo" placeholder="Nota 4" required name="modal-nota4">
              </div>
            </div>
          </div>
        </div>

        <!--Footer-->
        <div class="modal-footer aluno">
          <input type="button" class="btn-modal-cancelar" data-dismiss="modal" value="Desistir" name="modal-cancelar">
          <input type="submit" class="btn-modal-enviar" value="Alterar" name="modal-enviar">
        </div>
        
      </form>
    </div>
  </div>
