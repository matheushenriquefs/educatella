{
  "name": "dh-projeto-integrador",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "browserify": "npx browserify public/javascripts/src/main.js -o public/javascripts/src/bundle.js",
    "css-build": "node-sass public/stylesheets/src/main.scss public/stylesheets/dist/main.css",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-postcss": "postcss --use autoprefixer --output public/stylesheets/dist/main.css public/stylesheets/dist/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy && npm run js-build",
    "js-build": "babel public/javascripts/src --out-dir public/javascripts/dist",
    "js-watch": "npm run js-build -- --watch",
    "nodemon": "nodemon bin/www",
    "start": "npm-run-all --parallel css-watch js-watch nodemon"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "body-parser": "^1.20.1",
    "bootbox": "^5.4.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.18.2",
    "express-validator": "^6.5.0",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.10",
    "nodemailer-smtp-transport": "^2.7.4",
    "sequelize": "^5.21.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "autoprefixer": "^9.7.4",
    "bcrypt": "^5.0.0",
    "bootstrap": "^4.4.1",
    "browserify": "^16.5.1",
    "dotenv": "^8.2.0",
    "jquery": "^3.5.1",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "sequelize-cli": "^5.5.1"
  }
}
